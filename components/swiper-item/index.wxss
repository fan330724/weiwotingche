/* components/swiper-item/index.wxss */
.swiper{
  margin-top: 12rpx;
  width: 750rpx;
  height: 335rpx;
}
.swiper swiper{
  height: 100%;
}
.swiper swiper-item{
  border-radius: 20rpx;
}
.swiper swiper-item .box{
  background: #fff;
  margin: 0 10rpx;
  padding: 0 20rpx;
  border-radius: 12rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
  box-shadow: 2rpx 16rpx 12rpx rgba(0,0,0,.2);
  height: 300rpx;
}
.box .topNav{
  font-size: 32rpx;
  font-weight: 700;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.box .name_nav{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-top: 16rpx;
  flex: 4;
}
.box .name_top{
  display: flex;
  justify-content: start;
  flex-wrap: wrap;
}
.box .name_top .weiwo{
  padding: 8rpx;
  color: #fff;
  background-color: #30C77E;
  font-size: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  margin-left:20rpx; 
}
.box .xin{
  font-size: 24rpx;
  font-weight: 400;
  margin-top: 15rpx;
}
.box .border view{
  border-radius: 8rpx;
  padding: 6rpx 12rpx;
  border: 1px solid #2e89ef;
  color: #2e89ef;
  margin-top: 15rpx;
}
.box .price,.box .space{
  margin-right: 20rpx;
}
.box .park_img{
  width: 130rpx;
  height: 130rpx;
  border-radius: 12rpx;
  margin-top: 40rpx;
  flex: 1;
}
.box .park_img image{
  width: 100%;
  height: 100%;
}
.box .gongneng{
  margin: 0 auto;
  margin-bottom: 25rpx;
  margin-top: 20rpx;
}
.box .gongneng .daohang{
  width: 320rpx;
  height: 60rpx;
  background: #30C77E;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}
.box .gongneng .daohang image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 6px;
}