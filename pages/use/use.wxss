/* pages/use/use.wxss */
.main{
  width: 727rpx;
  height: 724rpx;
  position: relative;
  margin: 0 auto;
  margin-top: 20rpx;
}
.main image{
  width: 100%;
  height: 100%;
}
.main .tit{
  position: absolute;
  top: 20rpx;
  left: 0;
  text-align: center;
  width: 100%;
  color:white;
}
.main .tit .tit-t{
  font-size: 36rpx;
  padding: 20rpx 0;
}
.main .tit .tit-date{
  font-size: 24rpx;
}
.code{
  position: absolute;
  top: 240rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  flex-direction: column;
}
.code .code-i{
  width: 300rpx;
  height: 300rpx;
}
.code .code-b{
  color: #666;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.card{
  position: absolute;
  top: 240rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 445rpx;
  text-align: center;
}
.plain{
  padding: 0 30rpx;
  margin-top: 30rpx;
}
.plain-t{
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}
.plain-m{
  font-size: 24rpx;
  color: #666;
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}
.plain-m text{
  line-height: 35rpx;
  letter-spacing: 1px;
}

.park{
  position: absolute;
  top: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  /* z-index: 99; */
}
.park .park-t{

}
.park .title{
  font-size: 30rpx;
  color: #333;
  letter-spacing: 1px;
  margin: 20rpx 0 10rpx 0;
}
.park .xiala{
  position: relative;
}
.park .xiala .xiala-in{
  width: 540rpx;
  height: 60rpx;
  border: 1px solid #ccc;
  border-radius: 5px;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  justify-content: space-between;
  padding: 0 20rpx;
}
.xiala-in .sanjiao{
  width: 30rpx;
  height: 13rpx;
  transform: rotate(0);
  transition: all .5s;
}
.xiala-in .cur{
  transform: rotate(180deg);
  transition: all .5s;
}
.xiala .xiala-ma{
  position: absolute;
  top: 65rpx;
  left: 0;
  width: 545rpx;
  padding: 0 20rpx;
  background: white;
  z-index: 99;
}
.xiala .xiala-ma .xiala-te{
  font-size: 24rpx;
  color: #333;
  margin: 20rpx 0;
}
.park-b input{
  width: 540rpx;
  height: 60rpx;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 0 20rpx;
  font-size: 24rpx;
}

.park-btn{
  width: 60%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: white;
  letter-spacing: 1px;
  background: #30C77F;
  border-radius: 20px;
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  transform: translate(-50%);
}

.inp{
  width: 540rpx;
  height: 60rpx;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 0 20rpx;
  font-size: 24rpx;
  position: relative;
  line-height: 60rpx;
  display: flex;
  align-items: center;
}
.inp .place{
  color: #999;
}
.focus {
  width: 2rpx;
  height: 35rpx;
  background-color: #333;
}
.show {
  display: block;
  animation: blink 1s linear infinite;
}
.hide {
  display: none;
}

@keyframes blink {
  0%, 50% {
    opacity: 1;
  }

  50.01%, to {
    opacity: 0;
  }
}



/* 键盘样式 */

.keyboard {
  z-index: 9999;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: auto;
  background: #eaf1f9;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  border-bottom: 15rpx solid #eaf1f9;
  border-top: 20rpx solid #eaf1f9;
}
.del_icon {
  width: 100%;
  height: 100%;
  background: url(http://longmen-1251225286.costj.myqcloud.com/WechatIMG2.png) top center;
  background-size: 100% 100%;
}
.td {
  font-family: "微软雅黑";
  flex-grow: 1;
  text-align: center;
  font-size: 36rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  margin: 5rpx;
  border: 1rpx solid #cdd0d5;
  color: #1e1e1e;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
  box-shadow: 5rpx 5rpx 2rpx #cdd0d5;
}

.td_nor {
  flex: 1 1 10%;
}

.td_num {
  flex: 1 1 8%;
}

.td_spec_fin {
  background-color: #30C77E;
  color: #fff;
  flex: 1 1 23%;
}
.td_spec_del{
  width: 50px;
  height: 50px;
}

.board_bg {
  box-shadow: 0 0 0 #e5e5e5;
  background: #e5e5e5;
}