/* pages/exchange/exchange.wxss */
.page{
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  height: 60rpx;
  align-items: center;
}
.page .main{
  border: 1px solid #30C87F;
  width: 80%;
  height: 100%;
  border-radius: 5px;
}
.page .main input{
  width: 100%;
  height: 100%;
  padding-left: 5px;
}
.page .btn{
  width: 110rpx;
  height: 60rpx;
  background: #30C87F;
  text-align: center;
  line-height: 60rpx;
  color: white;
  border-radius: 8px;
}