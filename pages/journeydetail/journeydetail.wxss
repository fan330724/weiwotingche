/* pages/journeydetail/journeydetail.wxss */
.head{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
}
.head .price{
  color: #999999;
  font-size: 26rpx;
}
.head .price text{
  color: #30C77E;
  font-size: 48rpx;
  font-weight: bold;
}
.head .wrap{
  color: #666666;
  font-size: 30rpx;
  margin-top: 20rpx;
  letter-spacing: 1px;
  position: relative;
  width: 90%;
  text-align: center;
}
/*CSS伪类用法*/
.wrap view:after, .wrap view:before {
  position: absolute;
  top: 50%;
  background: #e6e6e6;
  content: "";
  height: 1px;
  width: 35%;
}
/*调整背景横线的左右距离*/
.wrap view:before {
  left: 0;
}
.wrap view:after {
  right: 0;
}
.main{
  padding: 20rpx 40rpx;
}
.main .title{
  color: #656565;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.main .list{
  display: flex;
  padding: 5rpx 0;
  color: #656565;
  font-size: 28rpx;
}
.main .list .span{

} 
.main .list .conten{
  flex: 1;
}

.fixed{
  position: fixed;
  bottom: 0;
  right: 0;
  width: 100%;
  padding: 30rpx 0;
}
.border{
  border-top: 2px dashed #e6e6e6;
}
.fixed .btn{
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #ccc;
  border-radius: 30px;
  border: 1px solid #ccc;
  float: right;
  margin-right: 30rpx;
}
.position{
  box-shadow: 0 5px 10px 8px rgba(0,0,0,.1);
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 400rpx;
  z-index: 99;
  background: white;
  /* transition: all .5s; */
  transform: translateY(400rpx);
}
.position .nav{
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 30rpx 0;
}
.position .nav text{
  color: #30C77E;
  font-size: 30rpx;
}
.position .nav .tit{
  color: black;
}
.position .textarea{
  padding: 0 30rpx;
}
.position .textarea textarea{
  font-size: 26rpx;
  letter-spacing: 1px;
  border: 1px solid #eee;
  padding: 10rpx;
  width: 95%;
  height: 250rpx;
}

/*弹窗*/
.modu{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999999
}

.shelf{
  background: white;
  border-radius: 10px;
  padding: 30rpx;
  color: #282828;
  font-size: 32rpx;
  width: 490rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.shelf .tishi{
  font-size: 32rpx;
  font-weight: bold;
  color: #282828;
  margin-bottom: 10rpx;
}
.shelf text{
  color: #656565;
  font-size: 24rpx;
}