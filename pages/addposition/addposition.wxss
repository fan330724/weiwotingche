/* pages/addposition/addposition.wxss */
.main{
  padding: 30rpx;
}
.list{
  display: flex;
  align-items: center;
}
.list icon{
  font-size: 50rpx;
  color: #30C87F;
  margin-right: 10rpx;
}
.list text{
  color: #3D444D;
  font-size: 32rpx;
  letter-spacing: 1px;
}
.border-bottom{
  border-bottom: 2px dashed #ccc;
  margin: 25rpx 0 30rpx 60rpx;
}

.list .address{
  color: #3D444D;
  font-size: 32rpx;
  margin-right: 30rpx;
  letter-spacing: 1px;
}
.list .address text{
  color: red;
  margin-right: 10rpx;
  font-size: 40rpx;
}
.list textarea{
  padding:20rpx 0 20rpx 20rpx;
  border: 1px solid #ddd;
  border-radius: 5px;
  width: 73%;
  margin-top: 10rpx;
}
.uploader{
  display: flex;
  margin: 50rpx 0;
}
.uploader-list{
  width: 200rpx;
  height: 200rpx;
  position: relative;
  margin-right: 40rpx;
}
.uploader-list image{
  width: 100%;
  height: 100%;
}
.uploader-list .delete{
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
}
.uploader-list .delete image{
  width: 100%;
  height: 100%;
}
.upadd{
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f6f6f6;
  color: #999999;
  font-size: 24rpx;
}
.upadd view{
  font-size: 90rpx;
  color: #30C77E;
}
.upadd text{
  margin-top: -10rpx;
  color: #30C77E;
}
.sub{
  background-color: #30C87F;
  color: white;
  letter-spacing: 1px;
  border-radius: 30px;
  border: none;
  box-shadow: 0 10rpx 20rpx rgba(48,200,127,.3);
  height: 90rpx;
  line-height: 90rpx;
  margin-top: 120rpx;
}
