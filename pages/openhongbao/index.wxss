/* 弹出框 */

.pop .alert-mask {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.3;
}

.pop .modalDlg{
  height: 60%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 9999;
}
.pop .receivee{  
            
}
.pop .receivee image:nth-of-type(1){
  width: 552rpx;
  height: 658rpx;
}
.pop .receivee image:nth-of-type(2){
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  top: 460rpx;
  left: 50%;
  margin: -90rpx;
}
.pop .receivee image.scale{
  animation: scale 1s infinite;
  transform-origin: center;
  transition: all 1s;
}
.pop .receivee image.rotate{
  animation: rotate 2s infinite;
}
@keyframes rotate{
  0%{
    transform: rotateY(0deg);
  }
  100%{
    transform: rotateY(360deg);
  }
}
@keyframes scale{
  0%{
    transform: scale(.8);
  }
  50%{
    transform: scale(1);
  }
  100%{
    transform: scale(.8);
  }
}
.pop .receive{
  background: url('http://124.70.23.12:8084/gameIcon/image/bt-success.png') no-repeat;
  background-size: 100% 100%;
  width: 552rpx;
  height: 658rpx;
  position: relative;
}
.pop .receive .top,.pop .receive .price{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  color: white;
}
.pop .receive .top{
  top: 200rpx;
  font-size: 46rpx;
}
.pop .receive .price{
  top: 290rpx;
  font-size: 85rpx;
}
.pop .butt{
  position: absolute;
  bottom: 9%;
  left: 50%;
  transform: translateX(-50%);
  width: 340rpx;
  height: 76rpx;
}
.pop .close {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 50%;
  bottom: 12%;
  transform: translateX(-50%);
}